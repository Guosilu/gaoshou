.gotop {
  width: 100%;
  background: #2d2d2d;
  text-align: right;
  padding: 10rpx;
  color: #fff;
  box-sizing: border-box;
}

.foot {
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  color: #ddd;
}

.ex-tit {
  padding: 20rpx 15rpx;
  border-bottom: 2rpx solid #aaa;
}

.ex-tit image {
  width: 50rpx;
  height: 50rpx;
  font-size: 32rpx;
  margin-right: 20rpx;
}

.ex-cover {
  width: 100%;
  position: relative;
  overflow: hidden;
}

.ex-cover image {
  width: 100%;
}

.ex-int {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.4);
  padding: 0 15rpx;
  color: #fff;
  overflow: hidden;
  font-size: 28rpx;
  box-sizing: border-box;
}

.ex-btns {
  margin: 30rpx 20rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 15rpx;
  border-radius: 15rpx;
  box-shadow: 2rpx 2rpx 2rpx 2rpx #ddd;
  overflow: hidden;
}

.ex-sponsor {
  overflow: hidden;
  width: 100%;
  padding: 10rpx 15rpx;
  box-sizing: border-box;
}

.ex-sponsor view {
  float: left;
  width: 48%;
  background: #2d2d2d;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 15rpx;
}

.ex-sponsor view:nth-child(even) {
  float: right;
}

.ex-patron {
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 15rpx;
  background: #2d2d2d;
  margin: 15rpx;
  box-sizing: border-box;
}

.ex-statistics {
  margin: 30rpx 20rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 15rpx 10rpx;
  border-radius: 15rpx;
  box-shadow: 2rpx 2rpx 2rpx 2rpx #ddd;
}

.ex-statistics view {
  background: rgb(252, 198, 1);
  font-size: 26rpx;
  text-align: center;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
}

.ex-tit {
  line-height: 50rpx;
}

.ex-tit image {
  height: 50rpx;
  vertical-align: middle;
}

