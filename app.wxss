/**app.wxss**/
@import '/style/weui.wxss';

.isHidden {
  display: none !important;
}

.isRed {
  background: #f23030;
  color: #fff;
}

.isOrange {
  background: #ff7214;
  color: #fff;
}

.isYellow {
  background: #fcc601;
  color: #fff;
}

.fr {
  float: right;
}

.no-border{
  border: none !important;
}

view {
  font-size: 14px;
}

swiper {
  height: 340rpx;
}

.slide-image {
  width: 750rpx;
  height: 340rpx;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.page__modules {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 20rpx;
}
.modules__shadow{
  margin: 20rpx;
  padding: 10px 24rpx;
  border: 1px solid #f2f2f2;
  border-radius: 25rpx;
  box-shadow: 1px 1px 20px 1px #f2f2f2;
}

.cate_tab {
  padding: 3% 7%;
  border-radius: 10rpx;
  font-size: 18px;
  font-weight: 500;
}

.top_icon {
  text-align: center;
}

.top_icon image {
  margin: 10rpx 0;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
}

.cate_icon {
  position: relative;
  color: #fff;
}

.cate_icon image {
  width: 345rpx;
  height: 198rpx;
  line-height: 198rpx;
  border-radius: 20rpx;
}

.cate_icon .cate_text {
  position: absolute;
  top: 50rpx;
  left: 0;
  width: 100%;
  text-align: center;
  line-height: 30px;
}

.cate_icon .cate_text_tit {
  font-size: 18px;
}

.cate_icon4 {
  width: 33%;
  text-align: center;
  margin: 15rpx 0;
}

.cate_icon4 image {
  margin: 10rpx;
  width: 68rpx;
  height: 68rpx;
  line-height: 68rpx;
}

.cate_tit {
  display: block;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 18px;
  padding-left: 5rpx;
  margin: 10rpx 0;
  border-left: 10rpx solid #dc4e40;
}

.cate_icon5 {
  position: relative;
  margin: 10rpx 0;
}

.cate_icon5 .cate_text {
  position: absolute;
  top: 40rpx;
  width: 100%;
  text-align: center;
  color: #fff;
  left: 0;
}

.cate_icon5 image {
  width: 310rpx;
  height: 175rpx;
  line-height: 175rpx;
}

.cate_icon5.full {
  width: 100%;
}

.cate_icon5.full image {
  width: 650rpx;
  height: 230rpx;
}

.cate_icon5.full .cate_text {
  top: 150rpx;
}

.eventsItem, .worksItem {
  width: 48%;
  margin-top: 20rpx;
  border: 1px solid #f2f2f2;
}
.eventsList{
  border-top: 20rpx solid #f2f2f2;
}

.eventsItem .listInfo, .worksItem .listInfo {
  padding: 10rpx 20rpx;
  color: gray;
}

.listInfoTit {
  display: inline-block;
  line-height: 30rpx;
  width: 50%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.eventsItem image, .worksItem image {
  width: 100%;
}

.eventsItem image {
  height: 224rpx;
}

.eventsItem .item-icon {
  width: 30rpx;
  line-height: 32rpx;
  vertical-align: middle;
  margin-top: -1rpx;
  margin-left: 10rpx;
  margin-right: 2rpx;
  opacity: 0.8
}

.eventsItem .item-icon1{
  margin-left: -8rpx !important;
}

.eventsItem .item-icnum {
  line-height: 32rpx;
  font-size: 12px;
  color: gray;
}

.worksItem image {
  height: 420rpx;
}

/* page{
  background: #f5f5f5;
} */

.gotop {
  width: 100%;
  background: #2d2d2d;
  text-align: right;
  padding: 10rpx;
  color: #fff;
  box-sizing: border-box;
}

.foot {
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  color: #ddd;
}

.ex-tit {
  padding-left: 10rpx;
  margin-bottom: 20rpx;
  border-left: 10rpx solid #dc4e40;
}

.ex-cover {
  width: 100%;
  position: relative;
  overflow: hidden;
}

.ex-cover image {
  width: 100%;
}

.ex-int {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.4);
  padding: 0 15rpx;
  color: #fff;
  overflow: hidden;
  font-size: 28rpx;
  box-sizing: border-box;
}

.ex-btns {
  margin: 30rpx 20rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 15rpx;
  border-radius: 15rpx;
  box-shadow: 2rpx 2rpx 2rpx 2rpx #ddd;
  overflow: hidden;
}

.ex-sponsor {
  overflow: hidden;
  width: 100%;
  padding: 10rpx 15rpx;
  box-sizing: border-box;
}

.ex-sponsor view {
  float: left;
  width: 48%;
  background: #2d2d2d;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 15rpx;
}

.ex-sponsor view:nth-child(even) {
  float: right;
}

.ex-patron {
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 15rpx;
  background: #2d2d2d;
  margin: 15rpx;
  box-sizing: border-box;
}

.ex-statistics {
  margin: 30rpx 20rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 15rpx 10rpx;
  border-radius: 15rpx;
  box-shadow: 2rpx 2rpx 2rpx 2rpx #ddd;
}

.ex-statistics view {
  background: rgb(252, 198, 1);
  font-size: 26rpx;
  text-align: center;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
}

.ex-tit {
  line-height: 50rpx;
}

.ex-tit image {
  height: 50rpx;
  vertical-align: middle;
}

/* 赏 */
.reward-btn{
  margin: 20rpx auto;
  width: 250rpx;
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  font-size: 16px;
  color: #dc4e40;
  border: 2rpx solid #dc4e40;
  border-radius: 33rpx;
}
.sys-number{
  font-size: 12px;
  color: gray;
}


/* 赞赏 */
.paySelect{
  background: #FFF;
  position: fixed;
  top: 20%;
  left: 50rpx;
  width: 650rpx;
  border: 2rpx solid #f2f2f2;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 20rpx 80rpx;
  transition: 1s;
  box-shadow: 1px 1px 3px 1px #f2f2f2;
}
.payTitle{
  text-align: center;
}
.payInner{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.payPart{
  width: 18%;
  padding: 15rpx 20rpx;
  margin: 30rpx 0;
  border: 2rpx solid #dc4e40;
  border-radius: 10rpx;
  color: #dc4e40;
  text-align: center
}
.otherAmount{
  font-size: 12px;
  text-align: center;
}
.closePay{
  width: 100%;
  text-align: center;
  border-top: 2rpx solid #f2f2f2;
  margin-top: 20rpx;
  padding: 20rpx;
  font-size: 16px;
}
.payBtn{
  display: inline-block;
  width: 50%;
  font-size: 16px;
  box-sizing: border-box;
}
.payBtn.true{
  color: green;
  border-left: 2rpx solid #f2f2f2;
}
.inputAmount{
  font-size: 26px;
  padding: 50rpx 0;
  text-align: center;
}
.payInput{
  display: inline-block;
  width: 200rpx;
  vertical-align: middle;
  height: 120rpx;
  line-height: 120rpx;
  text-align: left;
  font-size: 36px;
  margin-top: -10rpx;
}

/* 广告 */
.ad-box{
  padding: 0 20rpx;
  width: 100%;
}
.ad-box .weui-uploader__title{
  font-size: 16px;
  border-bottom: 2rpx solid #f2f2f2;
  padding-bottom: 10rpx;
  margin-bottom: 20rpx;
}
.ad-box .weui-uploader__bd{
  margin-bottom: 10rpx;
}
.ad-url{
  display: inline-block;
  vertical-align: middle;
}
.ad-item{
  border-top: 10rpx solid #f2f2f2;
  border-bottom: 10rpx solid #f2f2f2;
  padding: 20rpx;
}
.ad-bar{
  font-size: 12px;
  color: gray;
}
.ad-inner{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.ad-img{
  width: 350rpx;
  height: 180rpx;
  padding: 0;
  margin: 0;
}
.ad-add{
  width: 350rpx;
  height: 180rpx;
  line-height: 180rpx;
  text-align: center;
  color: #707070;
}
.ad-icon{
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
  margin-left: -20rpx;
  margin-top: 20rpx;
}

/* 视频 */
.video-box{
  width: 100%;
}