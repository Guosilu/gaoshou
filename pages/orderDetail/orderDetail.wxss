@import "/pages/template/contact/contact.wxss";
.ex-title{
  position: relative;
  font-size: 18px;
  line-height: 60rpx;
  font-weight: bold;
  padding: 0 20rpx;
  margin: 20rpx 0;
}

.ex-title::after{
  position: absolute;
  content: "";
  top: 8rpx;
  left: 0;
  display: inline-block;
  width: 10rpx;
  height: 46rpx;
  background: #dc4e40;
}
.yh_hudong {
  margin: 20rpx 0 30rpx;
  font-weight: normal;
  font-size: 12px;
  overflow: hidden;
  color: #888;
  border-bottom: 1rpx solid #f2f2f2;
}

.yh_hudong .ex_info{
  float: left;
  margin-right: 30rpx;
}

.yh_hudong .ex_num{
  float: right;
  font-size: 12px;
  margin: 0;
}

.yh_hudong .ex_icon{
  width: 30rpx;
  line-height: 60rpx;
  margin-right: 2rpx;
  margin-top: -1rpx;
  vertical-align: middle;
  opacity: 0.8;
  font-size: 13px;
}
.yh_hudong .u-avatar{
  border-radius: 50%;
  width: 45rpx;
  margin-top: -3rpx;
}

.yh_hudong .like_on{
  color: #dc4e40;
}
.ex_icon{
  width: 40rpx;
  line-height: 60rpx;
  margin-right: 2rpx;
  margin-top: -1rpx;
  vertical-align: middle;
  opacity: 0.8;
}
.informat{
  margin: 10rpx 20rpx;background: #fff;
}
.ex-list{
  overflow: hidden;margin-bottom: 30rpx;
}
.ex-cipate{
  float: left;width: 48%;margin-bottom: 20rpx;
}
.ex-cipate image{
  width: 100%;height: 340rpx;
}
.ex-cipate view{
  font-size: 26rpx;text-align: center;
}
.ex-btn{
  float: left;width: 48%;background: #2d2d2d;color: #fff;height: 80rpx;line-height: 80rpx ;text-align: center;font-size: 32rpx  ;border-radius: 15rpx;
}
.ex-btn:nth-child(even){
  float: right;
}
.ex-btn view{
  float: left;width: 48%;background: #2d2d2d;color: #fff;height: 80rpx;line-height: 80rpx ;text-align: center;font-size: 32rpx  ;border-radius: 15rpx;
}
.rule{
  margin: 30rpx 20rpx;background: #fff;box-shadow: 1rpx 1rpx 3rpx 1rpx #ddd;overflow: hidden;
}
.rule-cont{
  line-height: 50rpx;padding: 20rpx 15rpx;overflow: hidden;
}
.ex-tit{
  margin: 0;
}



/* 评论 */

.contact-box {
  padding: 30rpx 30rpx 120rpx;
  border-top: 5px solid #f2f2f2;
}

.contact-item {
  position: relative;
  border-top: 2rpx solid #f2f2f2;
  margin-bottom: 20rpx;
}

.ask-box {
  text-align: center;
  margin-top: 35rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f2f2f2;
}

.contact-bar {
  padding-bottom: 15rpx;
}

.u-avatar {
  width: 66rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 5rpx;
}

.u-name {
  padding: 20rpx 0;
  color: #405b95;
}

.contm-bar {
  display: flex;
  line-height: 50rpx;
  font-size: 12px;
  justify-content: space-between;
  padding: 15rpx;
  margin-top: 20rpx;
  border-top: 2rpx solid #f2f2f2;
}
.contm-icon {
  width: 36rpx;
  line-height: 50rpx;
  vertical-align: middle;
  margin-right: 5rpx;
}

.cont-sublist-box {
  margin: 0 0 5rpx 100rpx;
  padding: 15rpx 20rpx;
  background: #f8f8f8;
}


.cont-reply {
  color: #555;
}

.re-name {
  color: #405b95;
  display: inline;
}

.send-box {
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  position: fixed;
  width: 100%;
  overflow: hidden;
  left: 0;
  bottom: 0;
  height: 85rpx;
  line-height: 70rpx;
  border-top: 2rpx solid #f2f2f2;
  background: #FFF;
}

.send-box view {
  float: left;
}

.send-box input {
  width: 360rpx;
  border: 2rpx solid #999;
  border-radius: 6rpx;
  padding-left: 10rpx;
  box-sizing: border-box;
  font-size: 13px;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.send-box .fr {
  float: right;
}

.back-icon, .cont-icon {
  width: 50rpx;
  padding: 5rpx 10rpx;
}
.send-btn{
  height: 50rpx;
  line-height: 50rpx;
  padding: 5rpx 20rpx;
  border-radius: 6rpx;
  background: #3c76ff;
  color: #FFF;
}
/* 返回活动 */
.ex-back{
  padding: 25rpx 30rpx;
  margin-bottom: 20rpx;
  border-top: 2rpx solid #f2f2f2;
  border-bottom: 2rpx solid #f2f2f2;
}
.ext-title{
  font-size: 18px;
  font-weight: bold;
}
.ext-info{
  color: #666;
}
.ext-bar{
  font-size: 12px;
  color: gray;
}