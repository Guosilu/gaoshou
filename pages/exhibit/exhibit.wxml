<block wx:if="{{detail.id && like_status !== null && order_lists && exhibit_lists}}">
  <view class='ex-title'>
    {{detail.title}}
    <view class="yh_hudong" wx:if="{{detail.id && like_status !== null}}">
      <view class='ex_info'>
        <image src='/images/Avatar.png' class='ex_icon' mode='widthFix' />{{detail.nickName}}</view>
      <view class='ex_info'>
        <image src='/images/time.png' class='ex_icon' mode='widthFix' />
      </view>
      <view class='ex_info'>
        <image src='/images/looks.png' class='ex_icon' mode='widthFix' />{{detail.liulan}}</view>
      <view wx:if="{{like_status == 0}}" bindtap='like'>
        <image class='ex_icon' src="/images/like.png" mode="widthFix" />11</view>
      <view class="like_on" wx:else if="{{like_status == 1}}" bindtap='like_cancel'>
        <image class='ex_icon' src="/images/like_on.png" mode="widthFix" />12</view>
    </view>
  </view>
  <view class='informat'>
    <view class='ex-cover'>
      <image src='{{detail.thumb}}' mode='widthFix'></image>
    </view>
  </view>

  <view class='rule'>
    <view class='ex-tit'>
      <image src="/images/biaoqian.png"></image>活动规则
    </view>
    <view class='rule-cont'>
      {{detail.rule}}
    </view>
  </view>

  <view class='time'>
    <view class='ex-tit'>
      <image src="/images/biaoqian.png"></image>活动时间
    </view>
    <view class='rule-cont'>
      {{detail.starttime}}——{{detail.endtime}}
    </view>
  </view>
  <view class='ex-btns'>
    <view class='ex-btn' bindtap='joinActivity'>参与活动</view>
    <view class='ex-btn' bindtap='go_Activity_Initiate'>发起活动</view>
  </view>
  <view class='informat'>
    <view class='ex-tit'>
      <image src="/images/biaoqian.png"></image>参赛列表
    </view>
    <view class='ex-list'>
      <view class='ex-cipate' wx:for="{{order_lists}}" wx:key="*this">
        <navigator url="../orderDetail/orderDetail?id={{item.id}}">
          <image src='{{item.thumb}}' mode='aspectFill'></image>
          <view class='listInfo'>
            <view>
              {{item.truename}}，
            </view>
            <image src='/images/Avatar.png' class='ex_icon ex_icon1' mode='widthFix' />
            <text class='item-icnum'>发布者</text>
            <view class='fr'>
              <image src='/images/like.png' class='ex_icon ex_icon1' mode='widthFix' />
              <text class='item-icnum'>{{item.dianzan}}</text>
              <image src='/images/toupiao.png' class='ex_icon' mode='widthFix' />
              <text class='item-icnum'>{{item.toupiao}}</text>
              <image src='/images/looks.png' class='ex_icon' mode='widthFix' />
              <text class='item-icnum'>{{item.liulan}}</text>
            </view>
          </view>
        </navigator>
      </view>
    </view>
  </view>

  <view class='informat'>
    <view class='ex-tit'>
      <image src="/images/biaoqian.png"></image>推荐活动
    </view>
    <view class='ex-list'>
      <view class='ex-cipate' wx:for="{{exhibit_lists}}" wx:key="*this">
        <navigator url="../exhibit/exhibit?id={{item.id}}">
          <image src='{{item.thumb}}' mode='aspectFill'></image>
          <view class='listInfo'>
            <view>
              {{item.truename}}
            </view>
            <image src='/images/Avatar.png' class='ex_icon ex_icon1' mode='widthFix' />
            <text class='item-icnum'>发布者</text>
            <view class='fr'>
              <image src='/images/like.png' class='ex_icon' mode='widthFix' />
              <text class='item-icnum'>{{item.dianzan}}</text>
              <image src='/images/toupiao.png' class='ex_icon' mode='widthFix' />
              <text class='item-icnum'>{{item.toupiao}}</text>
              <image src='/images/looks.png' class='ex_icon' mode='widthFix' />
              <text class='item-icnum'>{{item.liulan}}</text>
            </view>
          </view>
        </navigator>
      </view>
    </view>
  </view>

  <import src='../foot/foot.wxml' />
  <template is='foot'></template>
</block>