<block wx:if="{{detail.id && like_status !== null && order_lists && exhibit_lists}}">
  <view class='ex-title'>
    {{detail.title}}
    <view class="yh_hudong" wx:if="{{detail.id && like_status !== null}}">
      <view class='ex_info'>
        <image src='{{detail.avatarUrl}}' class='ex_icon u-avatar' mode='widthFix' />{{detail.nickName}}</view>
      <view class='ex_info'>
        <image src='/images/time.png' class='ex_icon' mode='widthFix' />
      </view>
      <view class='ex_info'>
        <image src='/images/looks.png' class='ex_icon' mode='widthFix' />{{detail.liulan}}</view>
      <view class='{{like_status ? "like_on" : ""}}' bindtap='{{like_status ? "like_cancel" : "like"}}'>
        <image class='ex_icon' src='/images/{{like_status ? "like_on.png"  :"like.png"}}' mode="widthFix" />{{detail.dianzan?detail.dianzan:0}}
      </view>
    </view>
  </view>
  <view class='informat'>
    <view class='ex-cover'>
      <image src='{{detail.thumb}}' mode='widthFix'></image>
    </view>
    <view class='reward-btn'>
      赏
    </view>
  </view>

  <view class='rule page__modules modules__shadow'>
    <view class='rule-cont no-borderTop'>
      <view class='cont-title'>
        活动规则
      </view>
      {{detail.rule}}
    </view>
    <view class='rule-cont'>
      <view>发布时间：{{detail.starttime}}</view>
      <view>截止时间：{{detail.endtime}}</view>
    </view>
    <view class='ex-btn' bindtap='joinActivity'>参与活动</view>
    <view class='ex-btn' bindtap='go_Activity_Initiate'>发起活动</view>
  </view>
  <view class='informat'>
    <view class='ex-tit'>
      参赛列表
    </view>
    <view class='ex-list'>
      <view class='ex-cipate' wx:for="{{order_lists}}" wx:key="*this">
        <navigator url="../orderDetail/orderDetail?id={{item.id}}">
          <image src='{{item.thumb}}' mode='aspectFill'></image>
          <view class='listInfo'>
            <view>
              {{item.truename}}，
            </view>
            <image src='/images/Avatar.png' class='ex_icon ex_icon1' mode='widthFix' />
            <text class='item-icnum'>{{item.nickName}}</text>
            <view class='fr'>
              <image src='/images/like.png' class='ex_icon ex_icon1' mode='widthFix' />
              <text class='item-icnum'>{{item.dianzan}}</text>
              <image src='/images/looks.png' class='ex_icon' mode='widthFix' />
              <text class='item-icnum'>{{item.liulan}}</text>
            </view>
          </view>
        </navigator>
      </view>
    </view>
  </view>

  <view class='informat'>
    <view class='ex-tit'>
      推荐活动
    </view>
    <view class='ex-list'>
      <view class='ex-cipate' wx:for="{{exhibit_lists}}" wx:key="*this">
        <navigator url="../exhibit/exhibit?id={{item.id}}">
          <image src='{{item.thumb}}' mode='aspectFill'></image>
          <view class='listInfo'>
            <view>
              {{item.truename}}
            </view>
            <image src='/images/Avatar.png' class='ex_icon ex_icon1' mode='widthFix' />
            <text class='item-icnum'>{{item.nickName}}</text>
            <view class='fr'>
              <image src='/images/like.png' class='ex_icon' mode='widthFix' />
              <text class='item-icnum'>{{item.dianzan}}</text>
              <image src='/images/looks.png' class='ex_icon' mode='widthFix' />
              <text class='item-icnum'>{{item.liulan}}</text>
            </view>
          </view>
        </navigator>
      </view>
    </view>
  </view>

  <import src='../template/foot/foot.wxml' />
  <template is='foot'></template>
</block>