<!--pages/launch/launch.wxml-->
<block wx:if="{{detail.id && like_status !== null}}">

  <view class='ex-title'>
    {{detail.title}}
    <view class="yh_hudong" wx:if="{{detail.id && like_status !== null}}">
      <view class='ex_info'>
        <image src='/images/Avatar.png' class='ex_icon' mode='widthFix' />{{detail.nickName}}</view>
      <view class='ex_info'>
        <image src='/images/time.png' class='ex_icon' mode='widthFix' />
      </view>
      <view class='ex_info'>
        <image src='/images/looks.png' class='ex_icon' mode='widthFix' />{{detail.liulan}}</view>
      <view wx:if="{{like_status == 0}}" bindtap='like'>
        <image class='ex_icon' src="/images/like.png" mode="widthFix" />11</view>
      <view class="like_on" wx:else if="{{like_status == 1}}" bindtap='like_cancel'>
        <image class='ex_icon' src="/images/like_on.png" mode="widthFix" />12</view>
    </view>
  </view>


  <view class='informat'>
    <view class='ex-cover'>
      <image wx:if="{{detail.thumb}}" src="{{detail.thumb}}" mode='widthFix'></image>
      <image wx:if="{{detail.thumb1}}" src="{{detail.thumb1}}" mode='widthFix'></image>
      <image wx:if="{{detail.thumb2}}" src="{{detail.thumb2}}" mode='widthFix'></image>

      <image wx:if="{{detail.thumb3}}" src="{{detail.thumb3}}" mode='widthFix'></image>
    </view>
  </view>

  <view class='rule'>
    <view class='ex-tit'>
      <image src="/images/biaoqian.png"></image>作品说明
    </view>
    <view class='rule-cont'>
      {{detail.introduce}}
    </view>
  </view>
  <import src='/pages/template/contact/contact.wxml' />
  <template is='contact'></template>
</block>