/* 语音 */

.audio-box {
  background: linear-gradient(to right, #1e90ff, #436eee);
  width: 400rpx;
  height: 60rpx;
  padding: 0 10rpx;
  border-radius: 35rpx;
  margin-top: 20rpx;
}

.audio-box image {
  width: 60rpx;
  height: 60rpx;
}

.audio-time {
  float: right;
  color: #fff;
  padding: 10rpx 20rpx;
}

.voice-ing {
  position: fixed;
  top: 350rpx;
  left: 225rpx;
  width: 200rpx;
  height: 200rpx;
  padding: 30rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 10rpx;
}
