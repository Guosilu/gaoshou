<!--pages/record/record.wxml-->

<block wx:if="{{judge}}">
  <view wx:for="{{list}}" wx:key="*this" class="page__modules">
    <navigator url="../exhibit/exhibit?id={{item.id}}">
      <image class="recordListImg" src="{{item.thumb}}"></image>
      <view class="recordListInfo">
        <view class="recordListTitle">{{item.title}}</view>
        <view class="recordListOther">
          <text class="recordListAuthor">发起人:{{item.nickName}}</text> 赞{{item.toupiao}} 评{{item.comment}} 阅读{{item.liulan}}
        </view>
      </view>
    </navigator>
  </view>
</block>

<block wx:else>

  <!-- 谁看了我 -->
  <block wx:for="{{list}}" wx:key="*this">
    <view class="page__modules canyu">
      <navigator url="../orderDetail/orderDetail?id={{item.id}}">{{item.nickName}}<text>参与了你发表的活动</text></navigator>
      <navigator url="../exhibit/exhibit?id={{item.aid}}">{{item.title}}</navigator>
    </view>
  </block>
</block>