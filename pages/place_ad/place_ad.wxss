/* pages/place_ad/place_ad.wxss */

.page_container {
  padding: 20rpx;
}

.page_module {
  margin-bottom: 20rpx;
}

.page_module input {
  display: inline-block;
  width: 550rpx;
  border: 2rpx solid #f2f2f2;
  border-radius: 6rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 10rpx;
  vertical-align: middle;
}

.ad-preview {
  display: inline-block;
  width: 350rpx;
}

.ad-preview-text {
  text-align: center;
  line-height: 180rpx;
  vertical-align: top;
  background: #f2f2f2;
  margin-left: 10rpx;
  color: gray;
}

.ad-preview-comment {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: gray;
  font-size: 12px;
}

.ad-preview image {
  width: 350rpx;
  height: 180rpx;
  vertical-align: middle;
}

.ad-cate {
  padding: 10rpx 0;
}

.ad-title {
  display: inline-block;
  width: 135rpx;
}

.ad-comment {
  font-size: 12px;
  color: gray;
  margin-top: 10rpx;
}

.weui-btn {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
}
