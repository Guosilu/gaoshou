/* pages/search/search.wxss */
@import "/pages/list/list.wxss";

.weui-search-bar {
  background: none;
}

.weui-search-bar__form {
  border: 2rpx solid #f2f2f2;
  box-shadow: 2rpx 2rpx 5rpx 2rpx #f2f2f2;
}

.weui-search-bar__cancel-btn {
  background: #dc4e40;
  padding: 0 30rpx;
  height: 58rpx;
  line-height: 58rpx;
  margin-top: 4rpx;
  border-radius: 10rpx;
}

.list {
  margin-top: 0;
}

.list-item {
  position: relative;
}

.item-bar {
  width: 0;
  height: 0;
  border-width: 0 36px 36px;
  border-style: solid;
  border-color: transparent transparent #48b660; /*透明 透明  灰*/
  position: absolute;
  top: -20rpx;
  right: -54rpx;
  transform: rotate(45deg);
  -ms-transform: rotate(45deg); /* IE 9 */
  -moz-transform: rotate(45deg); /* Firefox */
  -webkit-transform: rotate(45deg); /* Safari 和 Chrome */
  -o-transform: rotate(45deg);
}

.item-bar-inner {
  display: inline-block;
  width: 100rpx;
  text-align: center;
  color: #fff;
  margin-left: -45rpx;
  margin-top: 26rpx;
}
