<block wx:if="{{types=='all'}}">
  <view class='list'>
    <view class='list-item' wx:for='{{list}}' wx:key="*this">
      <view class='portrait'>
        <view class='exh_title'>活动名称</view>
        <view class='exh_title'>编号：{{item.number?item.number:""}}</view>
        <view class="user_info">
          <image class="list_Avatar" src="{{item.avatarUrl}}"></image>
          <text class="user_name">{{item.nickName}}</text>
          <text class="user_date">截止日期：10月31日（周三）</text>
        </view>
      </view>
      <view class='del-text' bindtap='show' data-ids='{{item.id}}'>
        {{item.rule}}
      </view>
      <view class='del-cont' bindtap='show' data-ids='{{item.id}}'>
        <image src='{{item.thumb}}' mode='aspectFill'></image>
        <image wx:if="{{item.thumb1}}" src='{{item.thumb1}}' mode='aspectFill'></image>
        <image wx:if="{{item.thumb2}}" src='{{item.thumb2}}' mode='aspectFill'></image>
      </view>

      <view class='partic'>
          <image src='/images/like.png' class='ex_icon' mode='widthFix' /><text class='ex_text'>{{item.zanshang}}</text>
          <image src='/images/looks.png' class='ex_icon' mode='widthFix' /><text class='ex_text'>{{item.liulan}}</text>

          <navigator class='join' url='../participate/participate?id={{item.id}}'>参与活动</navigator>
      </view>
    </view>
  </view>
</block>

