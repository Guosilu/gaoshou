/* pages/list/list.wxss */
.user_info{
    float: left;margin-left: 30rpx;
}
.lists{
  overflow: hidden;margin: 10rpx 20rpx; box-sizing: border-box;box-shadow: 2rpx 2rpx 20rpx 2rpx #ddd;padding: 10rpx 15rpx;
}
.portrait{
  overflow: hidden;
}
.portrait .list_Avatar{
    width: 115rpx;
    height: 115rpx;
    line-height: 115rpx;
    float: left;
}
.user_date{
  font-size: 20rpx;
}
.user_name{
  margin: 10rpx 0;
}
.del-cont{
  overflow: hidden;box-sizing: border-box;
}
.del-text{
  font-size: 32rpx;
}
.del-cont image{
  width: 33%;padding:0 10rpx;box-sizing: border-box;
}
.partic{
  overflow: hidden;border-bottom: 2rpx solid #ddd;padding: 10rpx 0;font-size: 24rpx;
}
.partic text{
  line-height: 60rpx;
}
.partic .join{
  float: right;width:160rpx; background: #dc4e40;color: #fff;text-align: center;border-radius: 10rpx;
}



