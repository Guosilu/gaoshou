/* pages/square/square.wxss */
.add-icon {
  width: 100rpx;
  height: 100rpx;
  background: #fff;
  border-radius: 50%;
  padding: 2rpx;
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
}

.list {
  margin: 20rpx;
  /* padding: 20rpx; */
}

.list-item {
  box-sizing: border-box;
  box-shadow: 2rpx 1rpx 10rpx 1rpx #ddd;
  margin-bottom: 30rpx;
  padding: 20rpx 28rpx;
  border-radius: 10rpx;
}

.user_info {
  float: left;
  margin-left: 20rpx;
}

.portrait {
  overflow: hidden;
  padding: 10rpx;
}

.portrait .list_Avatar {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  float: left;
  box-shadow: 1px 1px 5px 1px #8a8a8a;
}

cate_tit .cate_tit {
  overflow: hidden;
  line-height: 50rpx;
  max-height: 100rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  word-break: break-all;
}

.user_date {
  font-size: 20rpx;
}
.end-time{
  color: #dc4e40;
  margin-left: 10rpx;
}

.user_name {
  margin: 10rpx 0;
}

.del-cont {
  overflow: hidden;
  box-sizing: border-box;
}

.del-cont image {
  width: 30%;
  height: 150rpx;
  margin: 0 10rpx;
  box-sizing: border-box;
  border: 2rpx solid #f2f2f2;
}

.partic {
  overflow: hidden;
  font-size: 24rpx;
  border-radius: 6rpx;
}
.del-text{
  margin: 15rpx;
}
.partic .ex_text {
  line-height: 60rpx;
  margin-right: 20rpx;
  color: gray;
}
.partic .ex_icon{
  width: 36rpx;
  line-height: 60rpx;
  margin-right: 2rpx;
  margin-top: -1rpx;
  vertical-align: middle;
  opacity: 0.8;
}

.partic .join {
  float: right;
  height: 60rpx;
  line-height: 60rpx;
  width: 160rpx;
  background: #dc4e40;
  color: #fff;
  text-align: center;
  border-radius: 10rpx;
}
