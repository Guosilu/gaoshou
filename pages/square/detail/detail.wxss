.informat{
  margin: 10rpx 20rpx;background: #fff;
}
.ex-title{
  position: relative;
  font-size: 18px;
  line-height: 60rpx;
  font-weight: bold;
  padding: 0 20rpx;
  margin: 20rpx 0;
}

.ex-title::after{
  position: absolute;
  content: "";
  top: 8rpx;
  left: 0;
  display: inline-block;
  width: 10rpx;
  height: 46rpx;
  background: #dc4e40;
}
.yh_hudong {
  margin: 20rpx 30rpx 0;
  font-weight: normal;
  font-size: 12px;
  overflow: hidden;
  color: #888;
}

.yh_hudong view{
  float: left;
  margin-right: 20rpx;
  line-height: 100rpx;
}

.yh_hudong image{
  width: 30rpx;
}

.yh_hudong .yh_Avatar{
  width: 120rpx;
  vertical-align: text-bottom;
}
.yh_hudong .like_on{
  color: #dc4e40;
}
.ex-list{
  overflow: hidden;margin-bottom: 30rpx;
}
.ex-cipate{
  float: left;width: 48%;margin-bottom: 20rpx;
}
.ex-cipate image{
  width: 100%;height: 340rpx;
}
.ex-cipate view{
  font-size: 26rpx;text-align: center;
}
.ex-btn{
  float: left;width: 48%;background: #2d2d2d;color: #fff;height: 80rpx;line-height: 80rpx ;text-align: center;font-size: 32rpx  ;border-radius: 15rpx;
}
.ex-btn:nth-child(even){
  float: right;
}
.ex-btn view{
  float: left;width: 48%;background: #2d2d2d;color: #fff;height: 80rpx;line-height: 80rpx ;text-align: center;font-size: 32rpx  ;border-radius: 15rpx;
}
.rule,.time{
  margin: 30rpx 20rpx;background: #fff;border-radius: 15rpx;box-shadow: 2rpx 2rpx 2rpx 2rpx #ddd;overflow: hidden;
}
.rule-cont{
  line-height: 50rpx;font-size: 32rpx;padding: 20rpx 15rpx;overflow: hidden;
}




