@import "/pages/list/list.wxss";

.portrait .list_Avatar {
  float: none;
  width: 100rpx;
}

.user_name {
  font-size: 16px;
}

.del-cont {
  width: 100%;
}

.exh-box {
  position: relative;
  padding-top: 20rpx;
  border-top: 2rpx solid #f2f2f2;
}

.user_date {
  float: none;
}

.exh_title {
  font-size: 16px;
  font-weight: bold;
}

.exh-box .join {
  position: absolute;
  right: 0;
  bottom: 0;
  height: 60rpx;
  line-height: 60rpx;
  width: 160rpx;
  background: #dc4e40;
  color: #fff;
  text-align: center;
  border-radius: 10rpx;
}
