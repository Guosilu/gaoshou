<!--pages/template/contact/contact.wxml-->
<view class='contact-box no-border'>
  <view class='contact-item'>
    <image class='u-avatar' src='{{detail.comment.avatarUrl}}' mode='widthFix'></image>
    <navigator url="" class='u-name'>{{detail.comment.nickName}}</navigator>
    <view class='cont-text'>{{detail.comment.content}}</view>
    <view class='cont-bar'>
      <text class='cont-time'>Time : {{detail.comment.addtime}}</text>
    </view>
    
    <view class='cont-fav'>
      <image src='/images/zan.png' mode='widthFix' />{{detail.comment.likes?detail.comment.likes:"0"}}
    </view>
  </view>
</view>
<view class='contact-box'>
  <view>全部评论</view>
  <!-- 循环 item -->
  <block wx:for="{{detail.reply}}" wx:key="*this">
  <view class='contact-item'>
    <image class='u-avatar' src='{{item.avatarUrl}}' mode='widthFix'></image>
    <navigator url="" class='u-name'>{{item.nickName}}</navigator>
    <view class='cont-fav'>
      <image src='/images/zan.png' mode='widthFix' />{{item.likes?item.likes:'0'}}</view>
    <view class='cont-text'>
      {{item.content}}
      <view wx:if="{{item.reply_nickName}}">
      //@{{item.reply_nickName}}：{{item.reply_content}}
      </view>
    </view>
    <view class='cont-bar'>
      <text class='cont-time'>{{item.addtime}}</text> ·
      <text class='cont-reply' bindtap='contReply' data-uid='{{item.id}}'>回复Ta</text>
    </view>
  </view>
  </block>

  <view class='send-box'>
    <view>
      <image class='back-icon' src='/images/back.png' mode='widthFix'></image>
    </view>
    <view>
      <input type='rext' focus='{{contShow}}' bindtap='inputTyping' bindinput='input' placeholder='发表评论领积分' value="{{inputVal}}"></input>
    </view>
    <view class='fr' hidden='{{contShow}}'>
      <image class='cont-icon' src='/images/contact.png' mode='widthFix'></image>
    </view>
    <view class='fr' hidden='{{sendShow}}'>
      <view class='send-btn' bindtap='sendBtn'>发送</view>
    </view>
  </view>
</view>