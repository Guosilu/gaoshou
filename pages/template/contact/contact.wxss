/* pages/template/contact/contact.wxss */

.contact-box {
  padding: 30rpx 30rpx 120rpx;
  border-top: 5px solid #f2f2f2;
}

.contact-item {
  position: relative;
}

.cu-avatar {
  width: 80rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
  position: absolute;
  top: 20rpx;
  left: 0;
}

.cu-name {
  position: absolute;
  top: 30rpx;
  left: 105rpx;
  color: #405b95;
}

.cont-fav {
  position: absolute;
  top: 30rpx;
  right: 0;
  color: #405b95;
  font-size: 13px;
}

.cont-fav image {
  width: 30rpx;
}

.cont-text {
  padding: 80rpx 0 0 100rpx;
  font-size: 15px;
}

.cont-bar {
  padding: 5rpx 0 5rpx 100rpx;
  font-size: 12px;
}

.cont-sublist-box {
  margin: 0 0 5rpx 100rpx;
  padding: 15rpx 20rpx;
  background: #f8f8f8;
}

.cont-time, .re-self {
  color: #888;
}

.cont-reply {
  color: #555;
}

.re-name {
  color: #405b95;
  display: inline;
}

.send-box {
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  position: fixed;
  width: 100%;
  overflow: hidden;
  left: 0;
  bottom: 0;
  height: 85rpx;
  line-height: 70rpx;
  border-top: 2rpx solid #f2f2f2;
  background: #FFF;
}

.send-box view {
  float: left;
}

.send-box input {
  width: 360rpx;
  border: 2rpx solid #999;
  border-radius: 6rpx;
  padding-left: 10rpx;
  box-sizing: border-box;
  font-size: 13px;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.send-box .fr {
  float: right;
}

.back-icon, .cont-icon {
  width: 50rpx;
  padding: 5rpx 10rpx;
}
.send-btn{
  height: 50rpx;
  line-height: 50rpx;
  padding: 5rpx 20rpx;
  border-radius: 6rpx;
  background: #3c76ff;
  color: #FFF;
}